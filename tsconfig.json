{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["ES2016", "esnext"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules"]
}
